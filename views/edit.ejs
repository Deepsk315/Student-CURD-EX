<%- include('./partials/header.ejs') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center"><strong>Edit for <%=users.email%></strong></h1>
        <div style="width: 30%; margin: 25px auto;">
				<form action="/users/<%= users._id %>?_method=PUT" method="POST" autocomplete="off">
                <div class="form-group">
                <input class="form-control" type="number" name="student[id]" value="<%=users.id%>" required>
                </div>
				<div class="form-group">
                <input class="form-control" type="text" name="student[name]" value="<%=users.name%>" required>
                </div>
				<div class="form-group">
                <input class="form-control" type="email" name="student[email]" value="<%=users.email%>" required>
                </div>
				<div class="form-group">
                <input class="form-control" type="text" name="student[section]" value="<%=users.section%>" required>
                </div>
				<div class="form-group">
                <input class="form-control" type="number" name="student[year]" value="<%=users.year%>" required>
                </div>
                <div class="form-group">
                <input class="form-control" type="text" name="student[city]" value="<%=users.city%>" required>
                </div>
				<div class="form-group">
                <input class="form-control" type="text" name="student[country]" value="<%=users.country%>" required>
                </div>
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </form>
			<br>
            <a href="/users">Go Back</a>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
